<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_land_margin"
        android:paddingBottom="@dimen/activity_vertical_land_margin"
        android:paddingLeft="@dimen/activity_horizontal_land_margin"
        android:paddingRight="@dimen/activity_horizontal_land_margin">

        <TextView
            android:id="@+id/questionViewcb"
            style="@style/TextViewStyle"/>

        <CheckBox
            android:id="@+id/answer_1_cb"
            android:text="@string/answer_1"
            style="@style/CheckBoxStyleLand"/>

        <CheckBox
            android:id="@+id/answer_2_cb"
            android:text="@string/answer_2"
            style="@style/CheckBoxStyleLand"/>

        <CheckBox
            android:id="@+id/answer_3_cb"
            android:text="@string/answer_3"
            style="@style/CheckBoxStyleLand"/>

        <CheckBox
            android:id="@+id/answer_4_cb"
            android:text="@string/answer_4"
            style="@style/CheckBoxStyleLand"/>

        <Button
            android:id="@+id/submitbttn"
            style="@style/ButtonStyleCBLand"
            android:onClick="onSubmit" />

    </LinearLayout>

 </ScrollView>